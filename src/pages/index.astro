<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Death Ponee</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap');

      body {
        margin: 0;
        font-family: 'Orbitron', sans-serif;
        background: linear-gradient(145deg, #0a0a0a, #1a1a1a);
        color: #eee;
        text-align: center;
        padding: 3rem 1rem;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
      }

      h1 {
        font-size: 4rem;
        margin-bottom: 0.2rem;
        text-transform: uppercase;
        letter-spacing: 4px;
        color: #ff2e63;
      }

      h2 {
        font-weight: normal;
        margin-bottom: 2.5rem;
        font-size: 1.5rem;
        color: #aaa;
      }

      .album-covers {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
        margin-bottom: 3rem;
      }

      .album-covers img {
        max-width: 300px;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 0 10px #000;
      }

      .links {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
      }

      .links a {
        display: inline-block;
        background-color: #252525;
        color: #ff2e63;
        text-decoration: none;
        font-size: 1rem;
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        border: 1px solid #ff2e63;
        transition: all 0.3s ease;
      }

      .links a:hover {
        background-color: #ff2e63;
        color: #000;
      }

      @media (max-width: 700px) {
        h1 {
          font-size: 2.5rem;
        }

        .album-covers {
          flex-direction: column;
        }

        .album-covers img {
          max-width: 90%;
        }
      }
    </style>
  </head>
  <body>
    <h1>Death Ponee</h1>
