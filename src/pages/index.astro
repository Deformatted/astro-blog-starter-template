      @keyframes glitch {
        0% { filter: contrast(1) brightness(1); }
        20% { filter: contrast(1.1) brightness(1.1); }
        40% { filter: contrast(1.2) brightness(0.9); }
        60% { filter: contrast(1.1) brightness(1); }
        80% { filter: contrast(1) brightness(1.2); }
        100% { filter: contrast(1) brightness(1); }
