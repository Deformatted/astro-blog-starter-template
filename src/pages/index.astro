<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Death Ponee</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Boogaloo&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Oxanium&display=swap" rel="stylesheet" />

    <style>
      body {
        margin: 0;
        font-family: 'Oxanium', sans-serif;
        background: linear-gradient(145deg, #0a0a0a, #1a1a1a);
        color: #ffcf00;
        text-align: center;
        padding: 1rem 1rem 3rem 1rem;
      }

      section {
        padding: 3rem 1rem;
      }

      #home {
        padding-bottom: 6rem;
      }

      #about {
        padding-top: 5rem;
      }

      #about h2 {
        color: #ffcf00;
      }

      #who {
        padding-top: 5rem;
      }

      .who-flex {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 2rem;
        max-width: 1000px;
        margin: 0 auto;
        flex-wrap: wrap;
      }

      .band-selfie img {
        width: 300px;
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(255, 207, 0, 0.15);
        margin-top: 2rem;
      }

      .band-members {
        max-width: 700px;
        margin: 1rem auto;
        font-size: 1rem;
        line-height: 1.8;
        text-align: justify;
      }

      .band-members .member {
        max-width: 600px;
        margin: 1rem auto;
        color: #f0eade;
        text-align: justify;
        font-size: 1rem;
        line-height: 1.8;
      }

      .name {
        color: #ffcf00;
        font-weight: bold;
      }

      #typewriter {
        max-width: 600px;
        height: 200px;
        overflow: hidden;
        margin: 2rem auto 0 auto;
        text-align: justify;
        line-height: 1.8;
        color: #f0eade;
        font-size: 1rem;
      }

      #typewriter p.yellow {
        color: #ffcf00;
        font-weight: bold;
      }

      #typewriter::after {
        content: '|';
        animation: blink 0.9s steps(1) infinite;
      }

      @keyframes blink {
        50% {
          opacity: 0;
        }
      }
    </style>
  </head>

  <body>
    <!-- HERO SECTION -->
    <section id="home">
      <h1>Death Ponee</h1>
      <div class="subheading">New album: <em>Waiting for Rover</em> – out now!</div>

      <div class="album-covers">
        <img src="/Final Front copy_for Digital (2).jpg" alt="Album cover front" />
        <img src="/Final Back copy_for Digital.jpg" alt="Album cover back" />
      </div>

      <div class="links">
        <a href="https://open.spotify.com/album/7DLH0CwDNEX6SX8OLLb3H5" target="_blank">Spotify</a>
        <a href="https://music.apple.com/us/album/waiting-for-rover-ep/1822589894" target="_blank">Apple Music</a>
        <a href="https://www.youtube.com/playlist?list=OLAK5uy_lqEcVBijeakOThABs2QHeLU7wPVUiZ3EU" target="_blank">YouTube</a>
        <a href="https://music.amazon.com/albums/B0FF6TZ33Q" target="_blank">Amazon</a>
      </div>
    </section>

    <!-- BIO SECTION -->
    <section id="about">
      <h2>What are we?</h2>
      <div class="band-photo">
        <img src="/Band photo2.png" alt="Death Ponee band photo" />
      </div>
      <div id="typewriter"></div>
    </section>

    <!-- BAND MEMBERS SECTION -->
    <section id="who">
      <h2>Who are we?</h2>
      <div class="who-flex">
        <div class="band-selfie">
          <img src="/Bandselfie.jpg" alt="Band selfie" />
        </div>
        <div class="band-members">
          <div class="member">
            <span class="name">Matt Ford</span> – Synths, vocals, and occasional existential dread. Former cellist, now armed with circuits and sarcasm. British, but slowly assimilating.
          </div>
          <div class="member">
            <span class="name">Mark Tierney</span> – Guitarist. Never seems to age — possibly immortal. Thinks fuzz pedals are a food group.
          </div>
          <div class="member">
            <span class="name">George Allen</span> – Synths and vocals. Meticulous, melodic, and almost certainly has a colour-coded band spreadsheet.
          </div>
          <div class="member">
            <span class="name">Nick Jennings</span> – Drums. Solid as a rock. Possibly the banjo king of Prague — but we try not to encourage him.
          </div>
        </div>
      </div>
    </section>

    <!-- SCRIPT -->
    <script>
      const paragraphs = [
        {
          text: "Death Ponee is an electronic post-punk band from Prague, built on live synths, searing guitars, and uptempo drums.",
          class: "yellow"
        },
        {
          text: "It started with me — a cellist-turned-synth player — writing moody tracks on a digital piano and wanting to build something raw and live. I called up people I’d played with before, picked up a synth, and we got to work.",
          class: ""
        },
        {
          text: "Our first album, Life’s Great Uniform, was instrumental. On Waiting for Rover, I step up to the mic for the first time. We’re now a four-piece: two synths, guitar, drums, and a tiny 8-bit sampler called the MicroGranny making weird noises at the edge of everything.",
          class: ""
        }
      ];

      const container = document.getElementById("typewriter");
      let pIndex = 0;
      let charIndex = 0;
      let currentP;

      function adjustFontToFit(container, maxHeight) {
        const temp = document.createElement('div');
        temp.style.visibility = 'hidden';
        temp.style.position = 'absolute';
        temp.style.width = container.offsetWidth + 'px';
        temp.style.fontFamily = getComputedStyle(container).fontFamily;
        temp.style.lineHeight = '1.8';
        temp.style.fontSize = '1rem';
        document.body.appendChild(temp);

        for (const p of paragraphs) {
          const para = document.createElement('p');
          para.textContent = p.text;
          if (p.class) para.classList.add(p.class);
          temp.appendChild(para);
        }

        let size = 1;
        while (temp.offsetHeight > maxHeight && size > 0.5) {
          size -= 0.05;
          temp.style.fontSize = size + 'rem';
        }

        container.style.fontSize = size + 'rem';
        document.body.removeChild(temp);
      }

      function typeWriter() {
        if (pIndex >= paragraphs.length) return;

        if (charIndex === 0) {
          currentP = document.createElement("p");
          if (paragraphs[pIndex].class) currentP.classList.add(paragraphs[pIndex].class);
          container.appendChild(currentP);
        }

        currentP.innerHTML += paragraphs[pIndex].text.charAt(charIndex);
        charIndex++;

        if (charIndex < paragraphs[pIndex].text.length) {
          setTimeout(typeWriter, 25);
        } else {
          charIndex = 0;
          pIndex++;
          setTimeout(typeWriter, 400);
        }
      }

      adjustFontToFit(container, 200);
      typeWriter();
    </script>
  </body>
</html>
