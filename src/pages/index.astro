    <!-- TYPEWRITER SCRIPT -->
    <script>
      const paragraphs = [
        {
          text: "Death Ponee is an electronic post-punk band from Prague. Gritty guitars, warped synths, and live drums â€” no safety net.",
          class: "yellow"
        },
        {
          text: "It started with Matt Ford, a lapsed cellist messing around on a digital piano. The songs were cold and lo-fi. He called up some old collaborators, grabbed a synth, and it spiralled from there.",
          class: ""
        },
        {
          text: "The first record, Lifeâ€™s Great Uniform, was mostless wordless (and harmless). Just textures and tension. On Waiting for Rover, Ford finally opens his mouth. Now itâ€™s a four-piece: two synths, guitar, drums â€” plus a glitchy 8-bit sampler called the MicroGranny spitting nonsense at the edge of it all.",
          class: ""
        }
      ];

      const container = document.getElementById("typewriter");
      let pIndex = 0;
      let charIndex = 0;
      let currentP;

      function typeWriter() {
        if (pIndex >= paragraphs.length) return;

        if (charIndex === 0) {
          currentP = document.createElement("p");
          if (paragraphs[pIndex].class) {
            currentP.classList.add(paragraphs[pIndex].class);
            if (paragraphs[pIndex].class === "yellow") {
              currentP.style.color = "#ffcf00";
              currentP.style.fontWeight = "bold";
            }
          }
          container.appendChild(currentP);
        }

        currentP.innerHTML += paragraphs[pIndex].text.charAt(charIndex);
        charIndex++;

        if (charIndex < paragraphs[pIndex].text.length) {
          setTimeout(typeWriter, 30);
        } else {
          charIndex = 0;
          pIndex++;
          setTimeout(typeWriter, 500);
        }
      }

      typeWriter();
    </script>
